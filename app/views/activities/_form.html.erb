<%= form_for @activity do |f| %>
    <%= f.label :title %>
    <%= f.text_field :name %><br>
    <%= f.label :description %>
    <%= f.text_area :description, size: '75x15' %><br />

    <%= f.label :add_this_to_your_bucket_list %>
    <%= check_box_tag :add_to_bucket_list %><br />

    <%= f.label :select_categories %><br />
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br />

    <%= f.submit class: 'button' %>
<% end %>