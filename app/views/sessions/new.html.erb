<h1>Login to Bucketry</h1>

<% if flash["error"] %>
    <div class="error"><%= flash["error"] %></div>
<% end %>

<%= form_tag "/login", method: :post do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %><br>
    <%= submit_tag "Login" %>
<% end %>

<%= button_to "Create an Account", new_user_path, method: :get %>