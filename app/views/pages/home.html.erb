<h1>Welcome to Bucketry</h1>

<% if flash["error"] %>
    <div class="error"><%= flash["error"] %></div>
<% end %>

<% if !session[:name] %>
    <div><%= link_to 'Join Bucketry', new_user_path %></div>
<% else %>
    <div><%= link_to "Your Bucketry Profile", user_path(current_user) %></div>
<% end %>

<div><%= link_to 'Our Community', users_path %></div>
<div><%= link_to 'Stories from Bucketry', stories_path %></div>

<h3>Share Your Bucketry list with Friends and Family</h3>

<h3>Recent Activity</h3>

<%= render partial: 'newsfeed', locals: {feed_elements: @recent_activities} %>