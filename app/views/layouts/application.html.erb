<!DOCTYPE html>
<html>
  <head>
    <title>Bucketry</title>


    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav>
    <span class='nav'><%= button_to "Home", root_path, method: :get %></span>
    <span><%= button_to "About Us", about_path, method: :get %></span>
    <span><%= button_to "Blog", stories_path, method: :get %></span>
    <span><%= button_to "Community Page", users_path, method: :get %></span>
    <span><%= button_to "Add Items to Your Bucketry List", activities_path, method: :get %></span>
    <span><%= button_to "Bucketry Categories", categories_path, method: :get %></span>

    <% if !session[:user_id] %>
        <span><%= button_to 'Join Bucketry', new_user_path, method: :get %></span>
        </nav>  
    <% else %>
        </nav>
        <nav class = "profile">
        <span><%= button_to "My Bucketry Profile", user_path(current_user), method: :get %></span>
    <% end %>

    <% if session[:user_id] %>
      <span>Hello, <%= session[:name] %></span>
      <span><%= button_to "Logout", logout_path, method: :post %></span>
    <% else %>
      <nav class = "profile">
      <span><%= button_to "Login", login_path, method: :get %></span>
    <% end %>
    </nav>
  <% if flash["error"] %>
    <div class="error"><%= image_tag 'red_bucket.png', {alt: 'A red bucket', size: "25"} %> <%= flash["error"] %></div>
  <% end %>
    <%= yield %>

  </body>
</html>
