<!DOCTYPE html>
<html>
  <head>
    <title>Bucketry</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <span><%= button_to "Home", root_path, method: :get %></span>
    <% if session[:name] %>
      <span>Hello, <%= session[:name] %><%= button_to "Logout", logout_path, method: :post %></span>
    <% else %>
      <span><%= button_to "Login", login_path, method: :get %></span>
    <% end %>
    <%= yield %>
  </body>
</html>
