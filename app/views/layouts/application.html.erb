<!DOCTYPE html>
<html>
  <head>
    <title>Bucketry</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <span><%= button_to "Home", root_path, method: :get %></span>
    <span><%= button_to "About Us", about_path, method: :get %></span>
    <span><%= button_to "Stories", stories_path, method: :get %></span>
    <span><%= button_to "Community Page", users_path, method: :get %></span>
    <span><%= button_to "Popular Bucketry List Choices", activities_path, method: :get %></span>

    <% if !session[:user_id] %>
    <div><%= button_to 'Join Bucketry', new_user_path, method: :get %></div>
    <% else %>
        <div><%= button_to "My Bucketry Profile", user_path(current_user), method: :get %></div>
    <% end %>

    <% if session[:user_id] %>
      <span>Hello, <%= session[:name] %><%= button_to "Logout", logout_path, method: :post %></span>
    <% else %>
      <span><%= button_to "Login", login_path, method: :get %></span>
    <% end %>
    <%= yield %>

  <% if flash["error"] %>
    <div class="error"><%= flash["error"] %></div>
  <% end %>
  </body>
</html>
